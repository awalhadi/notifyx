{
  "name": "notifyx",
  "version": "2.3.0",
  "author": "A Awal Hadi",
  "type": "module",
  "main": "dist/notifyx.min.js",
  "module": "dist/notifyx.es.js",
  "types": "./dist/index.d.ts",
  "style": "dist/notifyx.min.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/notifyx.es.js",
      "require": "./dist/notifyx.min.js",
      "default": "./dist/notifyx.es.js"
    },
    "./style.css": "./dist/notifyx.min.css"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    
    "tailwindcss": "^4.1.11",
    "terser": "^5.37.0",
    "typescript": "^5.8.2",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.0.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "description": "A lightweight, framework-agnostic toast notification library with built-in Tailwind CSS styles",
  "files": [
    "dist/*.js",
    "dist/*.css",
    "dist/*.d.ts",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "notifyx",
    "toast",
    "notification",
    "alert",
    "notify",
    "typescript",
    "tailwindcss",
    "toast",
    "framework-agnostic",
    "tailwindcss",
    "css-in-js"
  ],
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "build:css": "npx @tailwindcss/cli -i ./src/styles/toast.css -o ./dist/notifyx.min.css --minify",
    "build:all": "npm run build && npm run build:css",
    "verify": "bash scripts/verify-build.sh",
    "dev": "vite",
    "prepare": "npm run build:all"
  },
  "sideEffects": false
}
